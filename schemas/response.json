{
  "title": "HTTP Method Response schema",
  "description": "Describes a request on a resource",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "contentType": {
      "type": "string"
    },
    "statusCode": {
      "required": true,
      "type": "number",
      "description": "See http://en.wikipedia.org/wiki/List_of_HTTP_status_codes"
    },
    "headers": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/pragmatic-rest/spec/master/schemas/header.json"
      }
    },
    "body": {
      "type": "string",
      "description": "Does the request send any data via the body?"
    },
    "description": {
      "$ref": "https://raw.githubusercontent.com/pragmatic-rest/spec/master/schemas/shared/description.json"
    }
  }
}
